#include <stdio.h>

int imprimir(char c, int l){
    int i, j, total=0;
    for(i = 1; i < l; i++){
        for(j = 1; j <= i; j++){
            printf("%c ", c);
        }
        printf("\n");
        total +=1;
        
    }
    
    return (1+l)*l/2;
}

int main()
{
    printf("A quantidade de caracteres impressos foi: %d", imprimir('*',6));
    return 0;
}

   
