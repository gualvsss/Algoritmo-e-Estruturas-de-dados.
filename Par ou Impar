#include <stdio.h>
#include <locale.h>

int main() {
	setlocale(LC_ALL, "Portuguese");
	int n, res;
	printf("----------- Início de Programa -----------\n");
	printf("Entre com um valor numérico inteiro:");
	
	scanf("%d", &n);
	res = n % 2;
	if (res == 0)
		printf("O número entrado é par");
	else
		printf("O número entrado é ímpar");
		
	return 0;
}
